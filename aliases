# Unix
alias reload="exec $SHELL -l"
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"
alias bab=babushka
alias flushdns='dscacheutil -flushcache;sudo killall -HUP mDNSResponder;say flushed'

# vim
alias vimclean='vim -u NONE -N'

# Docker
# alias dme="eval ""$(docker-machine env \$1)"""
alias doco="docker-compose"
alias doma="docker-machine"
alias docl="docker-cloud"
alias dls="docker-machine ls"
alias doclean="docker ps -aq --filter status=exited | xargs docker rm -v"
alias donuke="docker ps -aq | xargs docker rm -vf"

# ansible
alias an=ansible
alias ap=ansible-playbook

# tree
alias tree='tree -L 2'

# git
alias gst="git status"
alias gci="git pull --rebase && rake && git push"
alias ga="git add"
alias gc="git commit"

# Bundler
alias b="bundle"
alias be="bundle exec"

# Tests and Specs
# alias t="ruby -I test"
alias cuc="bundle exec cucumber"

# tmux
alias tls="tmux list-sessions"
alias ta='tmux attach -t "$1"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
