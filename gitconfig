[push]
  default = current
[pull]
  rebase = true
[color]
  diff = auto
  status = true
  branch = auto
  interactive = auto
  ui = always
  pager = true
[alias]
  st = status
  ci = commit --verbose
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  aa = add --all
  ap = add --patch
  ca = commit --amend
  ci = commit -v
  co = checkout
  ss = submodule status

  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git branch -D $1' -
  merge-branch = !git checkout master && git merge @{-1}

  # FIXME @cuevee either update these to use gh or remove them
  pr = !hub pull-request
  st = status
  up = !git fetch origin && git rebase origin/master

  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached

[branch]
  autosetupmerge = true
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = only
  tool = opendiff
[include]
  path = .gitconfig.local
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[rerere]
  enabled = true
[diff]
  tool=opendiff
	submodule = log
[difftool]
  prompt = false
[difftool "opendiff"]
  cmd = /usr/bin/opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\" | cat
  path =
  # cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[mergetool "opendiff"]
  cmd = /usr/bin/opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\" | cat
  path =
[http]
  postBuffer = 157286400
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
